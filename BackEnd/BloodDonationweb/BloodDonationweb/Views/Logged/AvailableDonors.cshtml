@model List<BloodDonation.Business.DTO.UserDTO>

@{
    Layout = "_LayoutUser";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary" style="margin-top: 120px ; color:black">Available Donors</h2>
        </div>
        <div class="col-6">
        </div>
    </div>
    <br/>
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width: 100% ">
            <thead>
            
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Date of birth 
            </th>
            <th>
                Gender
            </th>
            <th>
                PhoneNumber
            </th>
            <th>
                Email
            </th>
            </thead>
            <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td width="30%">@user.FirstName</td>
                    <td width="30%">@user.LastName</td>
                    <td width="30%">@user.DateOfBirth.ToString("yyyy-MM-dd")</td>
                    <td width="30%">@user.Gender</td>
                    <td width="30%">@user.Phone</td>
                    <td width="30%">@user.Email</td>
                    <td width="30%"><button>Send Request</button></td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p style="color: black">No Items created yet</p>
    }
</div>