@model dynamic

@{
    Layout = "_LayoutUser";
}

<!DOCTYPE html>


<html>
<head>
    <title>Request Blood</title>

    <link href="~/css/site.css" rel="stylesheet" type="text/css">
    <script src="https://kit.fontawesome.com/fc5ac8f09d.js" crossorigin="anonymous"></script>
    <!--BlootStrap CDN-->
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>
<body class="search-blood-body">

<section class="search-blood" >

        <div class="container">

            @using (Html.BeginForm("SearchUserAction", "Logged", FormMethod.Post))
            {
                <label for="email">Search for a User by Email</label>
                <br>
                <input type="email" id="email" name="email" placeholder="enter user's email.." style="width: 400px">
                <br>
                <span id="null-email-message" style="color: #3c97bf">please enter email first</span>
                <span id="unexisted-email-message" style="color: #3c97bf">this email doesn't belong to any user</span>
                <span id="deleted-user-message" style="color: red"> User has been deleted successfully</span>
                <span id="managed-user-message" style="color: red"> User has been updated successfully</span>
                <button type="submit" value="submit" class="SubmitFormBtn">Search </button>
            }
        </div>
    </section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/caroufredsel.js" type="text/javascript"></script>
    <script type="text/javascript">
        $("#unexisted-email-message").hide();
         $("#deleted-user-message").hide();
         $("#managed-user-message").hide();
          $("#null-email-message").hide();
       

        if (window.location.hash) {
            var hash = window.location.hash.substring(1);
            if (hash == "1") {
                $("#unexisted-email-message").show();
            }
            else{
                if (hash == "0")
                 $("#deleted-user-message").show();
                else{
                    if (hash == "2")
                    $("#managed-user-message").show();
                    else 
                         $("#null-email-message").show();
                    }
            }
        }
    </script>
</body>
</html>
