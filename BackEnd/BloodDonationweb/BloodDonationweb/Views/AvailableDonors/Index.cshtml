@model IEnumerable<BloodDonationweb.Models.User>

@{
    Layout = "_LayoutUser";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Available Donors List</h2>
        </div>
        <div class="col-6">
            Create new Item
        </div>
    </div>
    <br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>
                    First Name
                </th>
            </tr>
            <th>
                Last Name
            </th>
            <th>
                Date of birth 
            </th>
            <th>
                Gender
            </th>
            <th>
                Phone
            </th>
            <th>
                Email
            </th>
            </thead>
            <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td width="30%">@user.Fname</td>
                    <td width="30%">@user.Lname</td>
                    <td width="30%">@user.Dob</td>
                    <td width="30%">@user.Gender</td>
                    <td width="30%">@user.phone</td>
                    <td width="30%">@user.Email</td>
                    <td width="30%"><button>Send Request</button></td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p style="color: black">No Items created yet</p>
    }
</div>
