
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/site.css" rel="stylesheet" type="text/css">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

    <title>
        Change Password
    </title>


</head>

<body class="Form-body" style="height: max-content;">

    <div class="forgot-pass-container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                @using (Html.BeginForm("ResetPasswordRequestA", "Account", FormMethod.Post))
                {
                    <h3><i class="fa fa-lock fa-4x"></i></h3>
                    <h2>Forgot Password?</h2>
                    <br>
                    <h5>You can reset your password here.</h5>
                    <br>
                    <br>

                    <input type="email" placeholder="Email" name="email" class="email-pass-reset"/>
                    <br>
                    <span id="unexisted-email-message" style="color: red">email was not found in our database</span>
                    <span id="please-fill-message" style="color: red">please enter an email</span>
                    <span id="sent-code-message" style="color: #3c97bf">a reset password link has been sent to your email</span>
                    <span id="reset-message" style="color: #3c97bf">your password has been reset successfully</span>
                    <span id="invalid-link-message" style="color: red">Invalid Link</span>
                    <button type="submit" value="submit" class="btn-reset">
                        Reset Password
                    </button>
                }
               

            </div>

        </div>
    </div>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="~/js/caroufredsel.js" type="text/javascript"></script>
<script src="~/js/site.js"></script>
    <script type="text/javascript">
        $("#unexisted-email-message").hide();
        $("#please-fill-message").hide();
         $("#sent-code-message").hide();
          $("#invalid-link-message").hide();
          $("#reset-message").hide();
        if (window.location.hash) {
            var hash = window.location.hash.substring(1);
            if (hash == "1") {
                $("#unexisted-email-message").show();
            }
            else {
                if (hash == "0")
                 $("#please-fill-message").show();
                else {
                    if (hash == "2")
                    $("#sent-code-message").show();
                    else {
                        if (hash == "3")
                            $("#invalid-link-message").show();
                          else 
                              $("#reset-message").show();
                              }
                       
                        }
                    }
            }
     
    </script>
</body>

</html>