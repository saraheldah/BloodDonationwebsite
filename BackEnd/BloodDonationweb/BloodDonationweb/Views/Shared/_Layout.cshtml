<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - BloodDonationweb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
<header>
    <div class="container">
        <div class="row">
            <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
                <img class="logo1" src="~/images/logo1.png" alt="logo"></a>
            <nav>
                <ul>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="GiveBlood">Give Blood</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="SignIn" asp-action="Index">Sign in</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<!--<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - BloodDonationweb - <a asp-area="" asp-controller="Home" asp-action="GiveBlood">Privacy</a>
    </div>
</footer>-->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/caroufredsel.js" type="text/javascript"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>